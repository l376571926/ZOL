<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bg">
            <TextView
                android:id="@+id/personal_avatar_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击登录"
                android:textColor="@color/aliceblue"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:drawableTop="@drawable/personal_default_avatar_01"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/personal_read"
                android:layout_width="0dp"
                android:drawableTop="@drawable/personal_my_read_icon"
                android:layout_margin="10dp"
                android:text="阅读"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/personal_collect"
                android:layout_width="0dp"
                android:drawableTop="@drawable/personal_my_collect_icon"
                android:layout_margin="10dp"
                android:text="收藏"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/personal_publish"
                android:layout_width="0dp"
                android:drawableTop="@drawable/personal_my_publish_icon"
                android:layout_margin="10dp"
                android:text="发表"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/personal_score"
                android:layout_width="0dp"
                android:drawableTop="@drawable/personal_my_score_icon"
                android:layout_margin="10dp"
                android:text="金豆"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lightgrey"/>

        <RelativeLayout
            android:id="@+id/personal_my_msg"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_msg_normal_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的消息"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_my_task"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_my_task_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的任务"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_my_orders"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_orders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_my_orders_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_orders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的订单"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lightgrey"/>
        <RelativeLayout
            android:id="@+id/personal_my_sec"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_sec_hand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_sec_hand_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_sec_hand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="二手买卖"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lightgrey"/>

        <RelativeLayout
            android:id="@+id/personal_my_recommends"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_recommends"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_recommends_feedback_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_recommends"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="建议反馈"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_my_settings"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/personal_app_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/personal_app_settings_icon"/>
            <TextView
                android:layout_toRightOf="@id/personal_app_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="应用设置"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/icon_all_channel"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lightgrey"/>
    </LinearLayout>


</ScrollView>